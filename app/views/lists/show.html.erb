<div class="card-trip">
  <img src='<%= @list.picture_url %>' />
  <div class="card-trip-infos">
    <div>
      <h1> <%= @list.name %> </h1>
    </div>
  </div>
</div>

<div class="container my-5">
  <div class="row">
    <h2>Bookmarks</h2>
      <ul>
        <% @list.bookmarks.each do |i| %>
          <li><%= i.movie.title %></li>
          <p>
            "<%= i.comment %>"
            <i class="fas fa-eraser"></i>
            <%= link_to  "Delete", list_path(@list), data: {confirm: "Are you sure?", method: :delete}, class: "ml-3 text-danger" %>
        <% end %>
      </ul>
  </div>
  <%= link_to  "Create Bookmark", new_list_bookmark_path(@list), class: "btn btn-primary" %>
</div>




